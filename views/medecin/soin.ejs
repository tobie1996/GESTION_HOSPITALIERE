<!---- Modifier un soin ----->
<% for (let i=0; i<soin.length; i++) { %>
  <div class="modal fade" id="modifossiertmodal<%= soin[i].id %>" tabindex="-1" role="dialog" aria-labelledby="mymodallabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header bg-dark">
          <h5 class="modal-title text-white" id="mymodallabel">Nouveaux soins de Mr/Mme <%= soin[i].nom %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="close">
            <span aria-hidden="true">×
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action="/edit13/<%= soin[i].id %>">
            <div class="row">
              <div class="col-md-6">
                <label for="id" class="text-danger">Numéro Soin</label>
                <input type="text" class="form-control" id="id" name="id" value="<%= soin[i].id %>" readonly>
              </div>
              <div class="col-md-6">
                <label for="salle" class="text-success">Salle</label>
                <input type="text" class="form-control" id="salle" name="salle" value="<%= soin[i].salle %>" readonly>
              </div>
              <div class="col-md-6">
                <label for="lit" class="text-success">Lit</label>
                <input type="text" class="form-control" id="lit" name="lit" value="<%= soin[i].lit %>" readonly>
              </div>
              <div class="col-md-6">
                <label for="nom" class="text-success">Patient</label>
                <input type="text" class="form-control" id="nom" name="nom" value="<%= soin[i].nom %>" readonly>
              </div>
              <div class="col-md-12">
                <label for="soin" class="text-success">Nouveaux soins médicaux</label>
                <textarea class="form-control" id="soin" name="soin" rows="8" cols="50"><%= soin[i].soin %></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
              <button type="submit" id="btnenregistrer" class="btn btn-primary">Sauvegarder</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>


                       
