<!----  Start  reciproque ----->	

<% if (admission && admission.length > 0) { %>
  <% admission.forEach((admission, index) => { %>
    <button style="height: 40px" class="btn btn-outline-dark btn-block text-left mt-2" type="button" data-toggle="collapse" data-target="#collapsetwo<%= index %>" aria-expanded="false" aria-controls="collapsetwo<%= index %>">
      <%= admission.nom %>
      <span class="fas fa-chevron-down float-right" aria-hidden="true">
      <span><i class="material-icons">person</i>
  </button>
    <div id="collapsetwo<%= index %>" class="collapse">
      <div class="card card-body">
        <div class="bg-dark text-center">
          <H1 class="text-white"> DOSSIER MEDICAL</H1>
          <h3 class="text-danger"> <%= admission.nom %></h3>
        </div>
        <br>
        <ul>
          <li>
            <label class="text-info">Motif d'admission : <strong class="text-dark"><%= admission.motif %></strong></label>
            
          </li>
          <li>
            <label class="text-info"><u>Diagnostique :</u> </label>
            <p><strong class="text-dark"><%= admission.diagnostique %></strong></p>
            <br>
          </li>
          <li>
            <label class="text-info">Date d'admission : <strong class="text-dark"><%= admission.date_admis %></strong></label>
          </li>
          <li>
            <label class="text-info">Date de sortie : <strong class="text-dark"><%= admission.date_sortie %></strong></label>
          </li>
          <li>
