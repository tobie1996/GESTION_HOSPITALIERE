<!----  modifier un dosssier ----->	 
<% for (let i=0; i<admission.length; i++) { %>
  <div class="modal fade" id="modifossiertmodal<%= admission[i].id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header bg-dark">
          <h5 class="modal-title text-white" id="myModalLabel">Editer du dossier D'admission</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/edit9/<%= admission[i].id %>">
          <div class="row">  
            
            <div class="col-md-4">
              <label for="id" class="text-danger">Numero dossier</label>
              <input type="text" class="form-control" id="id"  name="id"  value="<%= admission[i].id %>" readonly>
            </div>
            <div class="col-md-4">
              <label for="nom" class="text-dark">Nom et prénom</label>
              <input type="text" class="form-control" id="nom"  name="nom"  value="<%= admission[i].nom %> <%= admission[i].prenom %>" readonly>
            </div> 
            <div class="col-md-4">
              <label for="motif">Motif d'Admission:</label>
            <select class="custom-select" id="motif" name="motif" value="<%= admission[i].motif %>">
              <option selected><%= admission[i].motif %></option>
              <option value="Suivi">Suivi</option>
              <option value="Hospitalisation">Hospitalisation</option>
            </select>
             </div>
  
            <div class="col-md-4">
              <label for="diagnostique" class="text-success">Diagnostique</label>
                <textarea class="form-control" type="text" id="diagnostique" name="diagnostique" readonly><%= admission[i].diagnostique %></textarea>
            </div>

            <div class="col-md-4">
              <label for="etat_sortie" class="text-success">Etat de Sortie</label>
                <textarea class="form-control" type="text" id="etat_sortie" name="etat_sortie" readonly><%= admission[i].etat_sortie %></textarea>
            </div>
  
            <div class="col-md-4">
              <label for="date_admis" class="text-success">date admission</label>
              <input type="date" id="date_admis" name="date_admis" class="form-control" value="<%= admission[i].date_admis %>" >
            </div>
            <div class="col-md-4">
              <label for="date_sortie" class="text-success">date sortie</label>
              <input type="date" id="date_sortie" name="date_sortie" class="form-control" value="<%= admission[i].date_sortie %>">
            </div>
            <div class="col-md-4">
              <label for="salle" class="text-success">Salle</label>
              <select class="custom-select" id="salle" name="salle" value="<%= admission[i].salle %>">
                <option selected><%= admission[i].salle %></option>
                  <% salles.forEach(function(numero) { %>
                      <option><%= numero %></option>
                  <% }); %>
              </select>
            </div>
  
            <div class="col-md-4">
              <label for="lit" class="text-success">Lit</label>
              <select class="custom-select" id="lit" name="lit">
                <option selected><%= admission[i].lit %></option>
                  <% lits.forEach(function(numero) { %>
                      <option><%= numero %></option>
                  <% }); %>
              </select>
            </div>
      
            <div class="col-md-4">
              <label for="medecin" class="text-success">médecin</label>
              <select class="custom-select" id="medecin" name="medecin" >
                <option selected><%= admission[i].medecin %></option>
                  <% medecins.forEach(function(nom) { %>
                      <option ><%= nom %></option>
                  <% }); %>
              </select>
            </div>
  
            <div class="col-md-4">
              <label for="infirmier" class="text-success">Infirmier</label>
              <select class="custom-select" id="infirmier" name="infirmier" value="<%= admission[i].medecin %>">
                <option selected><%= admission[i].infirmier %></option>
                  <% infirmieres.forEach(function(nom) { %>
                      <option><%= nom %></option>
                  <% }); %>
              </select>
            </div>
  
            <div class="col-md-4">
              <label for="garde" class="text-success">gade malade</label>
              <select class="custom-select" id="garde" name="garde" value="<%= admission[i].garde %>">
                <option selected><%= admission[i].garde %></option>
                  <% gardes.forEach(function(nom) { %>
                      <option selected><%= nom %></option>
                  <% }); %>
              </select>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button"  class="btn btn-danger" data-dismiss="modal">Fermer</button>
          <button type="submit" id="btnEnregistrer" class="btn btn-primary">Enregistrer</button>
        </div>
        
      </form>
      </div>
    </div>
  </div>
  </div>
  <% } %>

