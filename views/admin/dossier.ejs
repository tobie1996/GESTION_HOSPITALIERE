            <strong class="text-dark"><%= admission.etat_sortie %></strong>
            
          </li>
          <li>
            <label class="text-info">Médecin: <strong class="text-dark"> Dr <%= admission.medecin %></strong></label>
          </li>
          <li>
            <label class="text-info">Infirmier: <strong class="text-dark"> M./Mme. <%= admission.infirmier %></strong></label>
          </li>
          <li>
            <label class="text-info">Salle du patient: <strong class="text-dark"> <%= admission.salle %></strong></label>        
          </li>
          <li>
            <label class="text-info">numéro du lit: <strong class="text-dark"><%= admission.lit %></strong></label>
          </li>
          <li>
            <label class="text-info">garde malade: <strong class="text-dark"><%= admission.garde %></strong></label>
          </li>
        </ul>
        <a href="#modifossiertmodal<%= admission.id %>" class="modifier" data-toggle="modal">
          <span style="display: flex; justify-content: flex-end;">
            <i class="fas fa-edit" style="color: rgb(49, 7, 126); font-size: 30px;"></i>
          
        </a>
      </div>
    </div>
