					    <!------affichage tableau-----------> 
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th><span class="custom-checkbox">
							<input type="checkbox" id="selectAll">
							<label for="selectAll"></label></th>
							<th>ID</th>
							<th>NOM PRENOM</th>
							<th>SPECIALITE</th>
              <th>TEL</th>
              <th>EMAIL</th>
              <th>ADRESSE</th>
              <th>ACTION</th>
						</tr>
					</thead>
						  
					<tbody>
          <% for (let i=0; i<medecin.length; i++) { %>
					<tr>
						<td><span class="custom-checkbox">
						    <input type="checkbox" id="checkbox1" name="option[]" value="1">
							 <label for="checkbox1"></label></td>
                                <td><%= medecin[i].id %></td>
                                <td><%= medecin[i].nom %></td>
                                <td><%= medecin[i].specialite %></td>
                                <td><%= medecin[i].tel %></td>	
                                <td><%= medecin[i].email %></td>	
                                <td><%= medecin[i].adresse %></td>					 
						              <td>
                            <a href="#editpatientmodal<%= medecin[i].id %>" class="edit" data-toggle="modal">
                              <i class="material-icons" style="color: blue;" data-toggle="tooltip" title="Edit">&#xE254;</i>
                            </a>
                            <a href="#deleteMedecin<%= medecin[i].id %>" class="delete" data-toggle="modal">
                              <i class="material-icons" style="color: red;"data-toggle="tooltip" title="Delete">&#xE872;</i>
                            </a>
                            <a href="#viewpatientmodal<%= medecin[i].id %>" class="view" data-toggle="modal">                   
                              <i class="material-icons" style="color: rgb(140, 0, 255);"data-toggle="tooltip" title="view">visibility</i>                   
                            </a>
                          </td>
          </tr>
                   <!---- modal d'edition medecin  --------->	 

                   <div class="modal fade" id="editpatientmodal<%= medecin[i].id %>" tabindex="-1" role="dialog" aria-labelledby="editusermodallabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-header bg-dark">
                          <h5 class="modal-title text-white" id="editusermodallabel">Modifier le médecin mr <%= medecin[i].nom %></h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="fermer">
                            <span aria-hidden="true">×
                          </button>
                        </div>
                        <div class="modal-body">
                          <form method="post" action="/edit2/<%= medecin[i].id %>">
                            <div class="form-row">
                              <div class="form-group col-md-6">
                                <label for="nom">Identifiant</label>
                                <input type="text" class="form-control" name="id" value="<%= medecin[i].id %>" readonly>
                              </div>
                              <div class="form-group col-md-6">
                                <label for="nom">Nom du médecin</label>
                                <input type="text" class="form-control" id="nom" name="nom" value="<%= medecin[i].nom %>">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="specialite" class="text-success">Spécialisation</label>
                                <select class="custom-select" id="specialite" name="specialite" value="<%= service[i].nom_service %>" >
                                  <% service.forEach(function(nom_service) { %>
                                  <option><%= nom_service %></option>
                                  <% }); %>
                                </select>
                              </div>
                              <div class="form-group col-md-6">
                                <label for="tel">Portable</label>
                                <input type="text" class="form-control" id="tel" name="tel" value="<%= medecin[i].tel %>">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="grade">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= medecin[i].email %>">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="grade">Adresse</label>
                                <input type="text" class="form-control" id="adresse" name="adresse" value="<%= medecin[i].adresse %>">
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                              <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                                    
                 <!----fin-modal edition end--------->              
              <% } %>
              </tbody>
                            
